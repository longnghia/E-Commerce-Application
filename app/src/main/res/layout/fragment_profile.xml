<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/grey_light"

                                                   android:padding="24px"
>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_centerVertical="true"
              android:textAlignment="center"
              android:text="@string/profile"
              android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_name" app:layout_constraintTop_toTopOf="parent"
              android:text="Hello"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
              app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/auth_btn"
            android:text="@string/logout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="64dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>