<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
             android:layout_marginEnd="15dp"
             android:orientation="horizontal"
             xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/action_orders" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/my_order"
                  android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        />
        <TextView android:id="@+id/tv_action_orders" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/no_orders"

        />
    </LinearLayout>

    <ImageView android:layout_width="wrap_content" android:layout_height="match_parent"
               android:layout_gravity="center|end"
               android:src="@drawable/ic_right"
    />

</FrameLayout>