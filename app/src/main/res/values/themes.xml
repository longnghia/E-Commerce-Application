<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.ECommerce" parent="Theme.Material3.Light.NoActionBar">-->
    <style name="Theme.ECommerce" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/grey_light</item>
        <item name="colorOnPrimary">@color/black_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_dark</item>
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->

        <!-- Customize your theme here. -->
        <!--        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>-->

        <!-- text color-->
<!--        <item name="android:textColor">@color/black_light</item>-->

        <!-- collapsable appbar-->
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->

    </style>


<!--    Splash-->
    <!-- This style is for the splash screen -->
    <style name="Theme.ECommerce.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ECommerce.TranslucentStatus">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>