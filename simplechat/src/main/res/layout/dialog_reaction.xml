<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_react"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:background="@drawable/reaction_padded_bg"
        android:clickable="true"
        android:elevation="6dp"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="23dp">

        <ImageView
            android:id="@+id/r1"
            android:layout_width="@dimen/reaction_icons"
            android:layout_height="@dimen/reaction_icons"
            android:src="@drawable/ic_love" />

        <ImageView
            android:id="@+id/r2"
            android:layout_width="@dimen/reaction_icons"
            android:layout_height="@dimen/reaction_icons"
            android:layout_marginLeft="@dimen/reaction_margin"
            android:src="@drawable/ic_haha" />

        <ImageView
            android:id="@+id/r3"
            android:layout_width="@dimen/reaction_icons"
            android:layout_height="@dimen/reaction_icons"
            android:layout_marginLeft="@dimen/reaction_margin"
            android:src="@drawable/ic_wow" />

        <ImageView
            android:id="@+id/r4"
            android:layout_width="@dimen/reaction_icons"
            android:layout_height="@dimen/reaction_icons"
            android:layout_marginLeft="@dimen/reaction_margin"
            android:src="@drawable/ic_sad" />

        <ImageView
            android:id="@+id/r5"
            android:layout_width="@dimen/reaction_icons"
            android:layout_height="@dimen/reaction_icons"
            android:layout_marginLeft="@dimen/reaction_margin"
            android:src="@drawable/ic_angry" />

        <ImageView
            android:id="@+id/r6"
            android:layout_width="@dimen/reaction_icons"
            android:layout_height="@dimen/reaction_icons"
            android:layout_marginLeft="@dimen/reaction_margin"
            android:src="@drawable/ic_liker" />
    </LinearLayout>
</LinearLayout>